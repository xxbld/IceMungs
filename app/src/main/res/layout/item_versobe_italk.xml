<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:background="@color/white"
    android:elevation="8dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_italk_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user"/>

            <TextView
                android:id="@+id/item_italk_iname"
                style="@style/IceMung.Widget.TextView"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/item_italk_icon"
                android:text="小小冰绿豆"/>

            <TextView
                android:id="@+id/item_italk_time"
                style="@style/IceMung.Widget.TextView.Hint"
                android:layout_alignLeft="@id/item_italk_iname"
                android:layout_below="@id/item_italk_iname"
                android:layout_marginTop="3dp"
                android:text="今天 8：00"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_italk_content"
            style="@style/IceMung.Widget.TextView"
            android:layout_marginLeft="16dp"
            android:text="从前有座山，山上有座庙，庙里有个老和尚，在讲故事；从前有座山，山上有座庙，庙里有个老和尚，在讲故事；从前有座山，山上有座庙，庙里有个老和尚，在讲故事；"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_italk_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_italk_see"
                style="@style/IceMung.Widget.TextView.Hint"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="3dp"
                android:text="浏览10次"/>

            <ImageView
                android:id="@+id/item_italk_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/selector_ic_share"
                />

            <ImageView
                android:id="@+id/item_italk_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/item_italk_share"
                android:src="@drawable/selector_ic_comment"
                />

            <ImageView
                android:id="@+id/item_italk_goodjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/item_italk_comment"
                android:src="@drawable/selector_ic_thumb_up"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>